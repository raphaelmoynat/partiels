{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="mb-5">
            <a href="{{ path("app_film") }}" class="btn btn-primary my-3"><i class="bi bi-arrow-left"></i> Retour</a>
        </div>

        <div class="d-flex justify-content-center align-items-center">
            <div class="col-md-6">
                <div class="card mb-4 border-0 shadow-sm mx-auto my-3">
                    <div class="position-relative">
                        {% include "image/image_or_not.html.twig" with {object:film} %}
                    </div>
                    <div class="card-body text-center">
                        <h5 class="card-title mb-3">{{ film.title }}</h5>
                        <p class="card-text text-muted">{{ film.description }}</p>
                    </div>
                    <div class="card-footer border-top-0">
                            <div class="d-flex justify-content-center align-items-center">
                                {% if app.user %}

                                        <a href="{{ path('seance_film', {id: film.id}) }}" class="btn btn-primary btn-sm">RÃ©server</a>


                                {% endif %}


                            </div>
                    </div>
                </div>
                {% if app.user %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="mt-3 d-flex justify-content-center">
                            <a class="btn btn-warning me-3" href="{{ path('app_edit_film', {id: film.id}) }}">Edit</a>
                            <a class="btn btn-danger me-3" href="{{ path('app_delete_film', {id: film.id}) }}">Delete</a>
                            <a href="{{ path('film_image',  {id: film.id}) }}" class="btn btn-success">Image</a>
                        </div>
                    {% endif  %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

